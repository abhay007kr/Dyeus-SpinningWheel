<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.ryan.luckywheel.MainActivity">

    <rubikstudio.library.LuckyWheelView
        android:layout_marginTop="-175dp"
        app:lkwBackgroundColor="@color/colorPrimary"
        app:lkwTopTextColor="#263238"
        app:lkwCenterImage="@drawable/wheel2"
        app:lkwCursor="@drawable/ic_cursor"
        android:id="@+id/luckyWheel"
        android:layout_width="600dp"
        android:layout_height="600dp" />

    <Button
        android:id="@+id/play"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:text="SPIN"
        android:textStyle="bold"
        android:background="#F44336"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="475dp"
        android:layout_alignBottom="@+id/luckyWheel"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/luckyWheel">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"
            android:text="@string/total"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/total_tv"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:text="@string/zero"/>
    </LinearLayout>

    <Button
        android:id="@+id/reset"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:text="@string/reset"
        android:textStyle="bold"
        android:background="#F44336"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="350dp"
        android:layout_marginLeft="152dp"
        android:layout_alignBottom="@+id/play"
        android:layout_width="70dp"
        android:layout_height="50dp" />

</RelativeLayout>
